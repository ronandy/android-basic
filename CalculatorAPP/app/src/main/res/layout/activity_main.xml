<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:id="@+id/txt_result"
        android:layout_gravity="center_horizontal"
        android:layout_weight="25"
        android:textSize="@dimen/text_size_tv"
        android:gravity="center|right"
        android:background="#B5B5B5" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:weightSum="4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/btn_n7"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/btn_n8"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/btn_n9"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_delete"
                android:layout_weight="1"
                android:background="@color/buttonColor2"
                android:textSize="@dimen/Button_Text_Size"
                android:src="@drawable/delete512"
                android:scaleType="centerCrop"
                android:padding="30dp"
                android:onClick="doClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btn_n4"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/btn_n5"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/btn_n6"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btn_suma"
                android:layout_weight="1"
                android:background="@color/buttonColor2"
                android:textSize="@dimen/Button_Text_Size"
                android:src="@drawable/suma512"
                android:scaleType="centerCrop"
                android:padding="30dp"
                android:onClick="doClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn_n1"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/btn_n2"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btn_n3"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:textColor="#9E9E9E" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/btn_resta"
                android:layout_weight="1"
                android:background="@color/buttonColor2"
                android:textSize="@dimen/Button_Text_Size"
                android:onClick="doClick"
                android:src="@drawable/menos512"
                android:scaleType="centerCrop"
                android:padding="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/btn_zero"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:textColor="#9E9E9E"
                android:onClick="doClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/btn_multi"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:src="@drawable/multi512"
                android:scaleType="centerCrop"
                android:padding="30dp"
                android:onClick="doClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/btn_divide"
                android:layout_weight="1"
                android:background="@color/buttonColor1"
                android:textSize="@dimen/Button_Text_Size"
                android:src="@drawable/divide512"
                android:scaleType="centerCrop"
                android:padding="30dp"
                android:onClick="doClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_equals"
                android:layout_weight="1"
                android:background="@color/buttonColor2"
                android:textSize="@dimen/Button_Text_Size"
                android:src="@drawable/equal512"
                android:scaleType="centerCrop"
                android:padding="30dp"
                android:onClick="doClick" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
